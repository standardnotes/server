{
  "name": "@standardnotes/common",
  "version": "1.30.0",
  "engines": {
    "node": ">=16.0.0 <17.0.0"
  },
  "description": "Common types and utilities for Standard Notes projects",
  "main": "dist/src/index.js",
  "author": "Standard Notes",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/src/**/*.js",
    "dist/src/**/*.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "AGPL-3.0-or-later",
  "scripts": {
