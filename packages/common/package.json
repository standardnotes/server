    "build": "tsc -p tsconfig.json",
    "lint": "eslint . --ext .ts",
    "test:unit": "jest spec --coverage"
  },
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.2",
    "ts-jest": "^28.0.5"
